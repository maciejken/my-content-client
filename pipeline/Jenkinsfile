pipeline {
    agent {
      docker { image 'node:14-alpine' }
    }
    stages {
      stage('install') {
        steps {
          sh 'node -v'
          sh 'echo $PWD'
          sh 'HOME=. npm install'
        }
      }
      stage('unit tests') {
        steps {
          sh 'npm run test:ci'
        }
      }
      stage('build') {
        steps {
          sh 'npm run build'
        }
      }
    }
}