pipeline {
  agent {
    node { label 'master' }
  }
  stages {
    stage('install') {
      steps {
        sh 'node -v'
        sh 'echo $PWD'
        sh 'npm install'
      }
    }
    stage('unit tests') {
      steps {
        sh 'npm run test:ci'
      }
    }
    stage('build') {
      environment {
        REACT_APP_API_URL = 'http://172.17.0.1:8001/api'
      }
      steps {
        sh 'npm run build'
      }
    }
    stage('docker run') {
      steps {
        sh 'docker stop my_content_client || true'
        sh 'docker run -it --rm -d -p 8000:80 --name my_content_client \
            -v $PWD/nginx/conf.d:/etc/nginx/conf.d \
            -v $PWD/build:/usr/share/nginx/html nginx'
      }
    }
  }
}
